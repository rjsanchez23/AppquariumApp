{% extends 'base.dashboard.html.twig' %}
{% block title %}Appquarium{% endblock %}
{% block menu %}

    {{ render(controller(
    'appquarium.controller.reminder:next7DaysReminders',
    { 'aquariumID': aquarium }
    )) }}
{% endblock %}
{% block body %}

    <div class="content">


        <div class="breadLine">
            <ul class="breadcrumb">
                <li><a href="/aquarium/dashboard">Dashboard</a> <span class="divider">></span></li>
                <li><a href="/aquarium/profile/{{ aquarium }}">Acuario</a> <span class="divider">></span></li>
                <li class="active">Métricas</li>
            </ul>
        </div>
        <div class="workplace">
            <div class="row">
                <div class="col-md-12">
                    <div class="widgetButtons">
                        <div class="bb"><a href="/aquarium/dashboard" class="tipb" title="Inicio"><span
                                        class="ibw-home"></span></a></div>
                        <div class="bb"><a href="/aquarium/profile/{{ aquarium }}" class="tipb" title="Estadisticas"><span
                                        class="ibw-aquarium"></span></a>
                        </div>
                        <div class="bb">
                            <a href="/aquarium/gallery/{{ aquarium }}" class="tipb" title="Gallery"><span
                                        class="ibw-picture"></span></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="head clearfix">
                        <h1>Mediciones Actuales</h1>
                    </div>
                    <div class="block">
                        <canvas id="barChart"></canvas>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="head clearfix">
                        <div class="col-md-3 col-md-offset-6 col-xs-6 col-xs-offset-0">
                            <div class="row-form clearfix" style="padding: 4px">
                                <select name="select" id="paramSelector">
                                    {% for parameter in parameters %}
                                        <option value="{{ parameter.value_range_id }}">{{ parameter.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 col-xs-6">
                            <div class="row-form clearfix" style="padding: 4px">
                                <select name="select" id="periodSelector">
                                    <option value="7">7 días</option>
                                    <option value="30">30 días</option>
                                    <option value="180">6 meses</option>
                                    <option value="365">1 año</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="block">
                        <canvas id="lineChart"></canvas>
                    </div>
                </div>


            </div>

        </div>


    </div>

{% endblock %}
